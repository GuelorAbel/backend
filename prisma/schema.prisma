// schema priisma
// Ce fichier définit le schéma de la base de données pour Prisma
// Il inclut les modèles de données et leurs relations
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// mes modèles de données
model Team {
  id  Int   @id   @default(autoincrement())
  name  String
  country  String
  players  Player[]

  @@map("team")
}


model Poste {
  id  Int   @id   @default(autoincrement())
  name  String @unique
  players  Player[]

  @@map("poste")
}

model Player {
  id  Int   @id   @default(autoincrement())
  name  String
  age  Int
  teamId  Int  // clé étrangère vers Team
  posteId  Int  // clé étrangère vers Poste

  team Team @relation(fields: [teamId], references: [id]) 
  poste Poste @relation(fields: [posteId], references: [id])

  @@map("player")
}
